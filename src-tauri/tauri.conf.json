{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Switchboot",
  "version": "0.1.0",
  "identifier": "com.switchboot.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Switchboot",
        
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": [
      "resources/icons"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "installerHooks": "platform/windows/nsis-hooks.nsi"
      },
      "wix": {}
    },
    "linux": {
      "deb": {
        "depends": ["policykit-1"],
        "files": {
          "/usr/share/polkit-1/actions/com.switchboot.cli.policy": "platform/linux/polkit/com.switchboot.cli.policy",
          "/usr/share/switchboot/icons": "resources/icons/svg"
        }
      },
      "rpm": {
        "depends": ["polkit"],
        "files": {
          "/usr/share/polkit-1/actions/com.switchboot.cli.policy": "platform/linux/polkit/com.switchboot.cli.policy",
          "/usr/share/switchboot/icons": "resources/icons/svg"
        }
      }
    },
    "active": true,
    "targets": ["app","deb","rpm","nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "zidane.dev"
  }
}
