{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Switchboot",
  "version": "0.1.2",
  "identifier": "dev.zidane.switchboot",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Switchboot",

        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "installerHooks": "platform/windows/nsis-hooks.nsi"
      },
      "wix": {}
    },
    "linux": {
      "deb": {
        "depends": ["polkitd"],
        "files": {
          "/usr/share/polkit-1": "platform/linux/polkit-1",
          "/usr/share/icons/hicolor": "icons-linux/hicolor",
          "/usr/bin/switchboot-cli-nopass": "platform/linux/links/switchboot-cli-nopass"
        }
      },
      "rpm": {
        "depends": ["polkit"],
        "files": {
          "/usr/share/polkit-1": "platform/linux/polkit-1",
          "/usr/share/icons/hicolor": "icons-linux/hicolor",
          "/usr/bin/switchboot-cli-nopass": "platform/linux/links/switchboot-cli-nopass"
        }
      }
    },
    "active": true,
    "targets": ["app", "deb", "rpm", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "zidane.dev",
    "copyright": "Copyright Â© 2025 zidane.dev"
  }
}
